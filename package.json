            "import": "./dist/index.js"
        },
        "./autoloader": {
            "import": "./dist/main.js"
        },
        "./engine": {
            "import": "./dist/engine.js"
        }
    },
    "devDependencies": {
        "@types/node": "^22.5.5",
        "@types/yargs": "^17.0.33",
        "typescript": "~5.4.2",
        "vite": "^5.4.6",
        "vite-plugin-dts": "^4.2.1"
    },
    "dependencies": {
        "glob": "^11.0.0",
        "prompts": "^2.4.2",
        "winston": "^3.14.2",
        "yargs": "^17.7.2"
    }
